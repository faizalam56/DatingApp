<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <android.support.v7.widget.CardView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/root_cv"
        style="@style/CardViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:layout_gravity="top">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.across.senzec.datingapp.ui.DynamicHeightImageView
                android:id="@+id/iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:scaleType="centerCrop"
                app:heightRatio="1.0"
                android:background="@color/grey_300"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:padding="1dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_vertical"
                    android:background="@android:color/white"
                    >
                    <LinearLayout
                        android:id="@+id/ll_display_name_age"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/display_name_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/primary_text"
                            android:fontFamily="sans-serif"
                            android:text="Name"
                            android:textSize="22sp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/primary_text"
                            android:fontFamily="sans-serif"
                            android:text=", "
                            android:textSize="22sp"/>
                        <TextView
                            android:id="@+id/display_age_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/primary_text"
                            android:fontFamily="sans-serif"
                            android:text="Age"
                            android:textSize="22sp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_display_distance"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/user_distance_tv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/secondary_text"
                            android:fontFamily="sans-serif"
                            android:textSize="16sp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/secondary_text"
                            android:fontFamily="sans-serif"
                            android:textSize="16sp"
                            android:text="0 kms away"/>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_common_friends"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="5dp"
                        android:src="@mipmap/friends" />

                    <TextView
                        android:id="@+id/tv_common_friends"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="10dp"
                        android:text="0"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/iv_interests"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="5dp"
                        android:src="@mipmap/interests" />

                    <TextView
                        android:id="@+id/tv_interests"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                </LinearLayout>


            </RelativeLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/ll_like_damm_dislike"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_gravity="bottom">
                <RelativeLayout
                    android:id="@+id/rl_main"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:id="@+id/rl_first"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <Button
                            android:id="@+id/btn_dislike"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:background="@drawable/cross"
                            android:layout_marginLeft="40dp"
                            android:layout_alignParentLeft="true"/>
                        <Button
                            android:id="@+id/btn_like"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:background="@drawable/heart"
                            android:layout_marginRight="40dp"
                            android:layout_alignParentRight="true"/>
                    </RelativeLayout>
                   <RelativeLayout
                       android:id="@+id/rl_second"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_centerInParent="true">
                       <Button
                           android:id="@+id/btn_damn"
                           android:layout_width="100dp"
                           android:layout_height="80dp"
                           android:background="@drawable/point"
                           android:text="DAMN!"
                           android:textColor="@color/colorWhite"
                           android:textStyle="bold"
                           android:textSize="20dp"
                           android:layout_centerInParent="true"/>
                   </RelativeLayout>



                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
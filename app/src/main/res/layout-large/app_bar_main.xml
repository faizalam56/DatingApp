<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
   >

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:theme="@style/AppTheme">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="10dp"
                android:src="@mipmap/back_small" />

            <ImageView
                android:id="@+id/iv_logo_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="10dp"
                android:visibility="gone"
                android:src="@mipmap/logo_icon" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:textStyle="bold"
                android:textColor="@color/colorBlack"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="jffjgfj" />

            <FrameLayout
                android:id="@+id/frame_find_match"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone">
                <RelativeLayout
                    android:layout_width="240dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    >
                    <Button
                        android:id="@+id/btn_future"
                        android:layout_width="80dp"
                        android:layout_height="25dp"
                        android:background="@drawable/present"
                        android:textColor="@color/colorBlack"
                        android:textStyle="bold"
                        android:text="FUTURE"/>
                    <Button
                        android:id="@+id/btn_present"
                        android:layout_width="80dp"
                        android:layout_height="25dp"
                        android:layout_centerInParent="true"
                        android:background="@drawable/present"
                        android:textColor="@color/colorBlack"
                        android:textStyle="bold"
                        android:text="PRESENT"/>
                    <Button
                        android:id="@+id/btn_event"
                        android:layout_width="80dp"
                        android:layout_height="25dp"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/present"
                        android:textColor="@color/colorBlack"
                        android:textStyle="bold"
                        android:text="EVENTS"/>
                </RelativeLayout>
            </FrameLayout>

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <include layout="@layout/content_main" />


</android.support.design.widget.CoordinatorLayout>
